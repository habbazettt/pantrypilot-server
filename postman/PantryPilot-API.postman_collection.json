            "description": "Recipe generation and management",
            "item": [
                {
                    "name": "Generate Recipes",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"ingredients\": [\"ayam\", \"bawang putih\", \"kecap manis\", \"jahe\"],\n  \"maxTime\": 30,\n  \"difficulty\": \"easy\",\n  \"allergies\": [],\n  \"preferences\": [\"halal\"]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/recipes/generate",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "recipes",
                                "generate"
                            ]
                        },
                        "description": "Generate 1-3 recipe suggestions based on provided ingredients"
                    },
                    "response": []
                },
                {
                    "name": "Generate Recipes - Minimal",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"ingredients\": [\"telur\", \"nasi\", \"kecap\"]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/recipes/generate",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "recipes",
                                "generate"
                            ]
                        },
                        "description": "Generate recipes with minimal input"
                    },
                    "response": []
                },
                {
                    "name": "Get All Recipes",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/recipes",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "recipes"
                            ]
                        },
                        "description": "Retrieve all saved recipes"
                    },
                    "response": []
                },
                {
                    "name": "Get Recipe by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/recipes/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "recipes",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "uuid-here",
                                    "description": "Recipe ID (UUID)"
                                }
                            ]
                        },
                        "description": "Retrieve a specific recipe by its ID"
                    },
                    "response": []
                }
