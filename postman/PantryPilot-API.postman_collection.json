                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/health",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "health"
                            ]
                        },
                        "description": "Check the health status of the application, database, and Redis"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Root",
            "description": "Root endpoints",
            "item": [
                {
                    "name": "Hello World",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}",
                            "host": [
                                "{{baseUrl}}"
                            ]
                        },
                        "description": "Returns a hello message"
                    },
                    "response": []
                }
            ]
        },
        {
